@model CreateBlogDto
@{ViewData["Title"] = "Yeni Blog";}
<form method="post">
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" /><br />
    <label>Kategori</label>
    <select class="form-control col-sm-3" asp-items="@ViewBag.Categories" asp-for="BlogCategoryId">
        <option>Kategori Seçiniz</option>
    </select><br />
    <label>Görsel</label>
    <input type="text" asp-for="ImageUrl" class="form-control" /><br />
    <label>İçerik</label>
    <textarea asp-for="Content" rows="5" class="form-control"></textarea><br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>