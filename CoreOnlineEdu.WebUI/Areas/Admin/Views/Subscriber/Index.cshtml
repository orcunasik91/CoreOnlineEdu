@model List<ResultSubscriberDto>
@{ViewData["Title"] = "Aboneler";}

<a asp-area="Admin" asp-controller="Subscriber" asp-action="CreateSubscriber" style="font-size:30px;"><i class="fas fa-plus"></i></a>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Abone Email</th>
        <th>Durumu</th>
        <th colspan="2">İşlemler</th>
    </tr>
    @{
        int counter = 0;
        foreach (var subscriber in Model)
        {
            counter++;
            <tr>
                <th>@counter</th>
                <td>@subscriber.Email</td>
                <td>@(subscriber.IsActive ? "Aktif" : "Pasif")</td>
                <td>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Subscriber" asp-action="UpdateSubscriber" asp-route-id="@subscriber.SubscriberId"><i class="fas fa-pencil-alt"></i></a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Subscriber" asp-action="RemoveSubscriber" asp-route-id="@subscriber.SubscriberId"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    }
</table>