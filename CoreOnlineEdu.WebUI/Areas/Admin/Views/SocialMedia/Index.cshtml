@model List<ResultSocialMediaDto>
@{ViewData["Title"] = "Sosyal Medya";}

<a asp-area="Admin" asp-controller="SocialMedia" asp-action="CreateSocialMedia" style="font-size:30px;"><i class="fas fa-plus"></i></a>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Sosyal Medya</th>
        <th colspan="2">İşlemler</th>
    </tr>
    @{
        int counter = 0;
        foreach (var socialMedia in Model)
        {
            counter++;
            <tr>
                <th>@counter</th>
                <td><i class="@socialMedia.Icon"></i> <a href="@socialMedia.Url" target="_blank" class="text-black"> @socialMedia.Title</a></td>
                <td>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@socialMedia.SocialMediaId"><i class="fas fa-pencil-alt"></i></a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="SocialMedia" asp-action="RemoveSocialMedia" asp-route-id="@socialMedia.SocialMediaId"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    }
</table>